{
  "metadata": {
    "version": "1.1.0",
    "last_updated": "2024-08-19",
    "description": "Config for deployment, rollback, and release management processes, including customer details and transfer rules."
  },
  "customer": {
    "customer_uid": "c12345-abcde-67890-fghij",
    "name": "Corporater",
    "contact": {
      "name": "Test",
      "email": "test@corporater.com",
      "phone": "9999999"
    },
    "address": {
      "street": "gateaddresse",
      "city": "Stavanger",
      "state": "",
      "zip": "4444",
      "country": "NO"
    },
    "description": "Corporater description"
  },
  "setup": {
    "version": "1.1.0",
    "common": {
      "base_url": "https://innovation.corporater.dev"
    },
    "hosts": [
      {
        "id": "host1",
        "uid": "f3a5b76e-1c4d-4f19-8d2b-1a3c33e73f1b",
        "name": "Development Environment",
        "url": "/development",
        "stage": "development",
        "description": "Development environment where new features are developed and initially tested."
      },
      {
        "id": "host2",
        "uid": "b2c6a7e1-6cd5-4c88-a8f1-89f7cbb8f8c5",
        "name": "QA Environment",
        "url": "/qa",
        "stage": "testing",
        "description": "QA environment for thorough testing of features before production deployment."
      },
      {
        "id": "host3",
        "uid": "e4d7c72a-9e7a-4f99-bb91-f5c8d9b8b715",
        "name": "Production Environment",
        "url": "/production",
        "stage": "production",
        "description": "Production environment where features are live and available to end-users."
      }
    ],
    "transfer_rules": {
      "allowed_transfers": [
        {
          "source": "development",
          "destination": "testing",
          "description": "Transfer from Development to Testing for further validation."
        },
        {
          "source": "testing",
          "destination": "production",
          "description": "Transfer from Testing to Production for live deployment."
        }
      ],
      "disallowed_transfers": [
        {
          "source": "development",
          "destination": "production",
          "description": "Direct transfer from Development to Production is not allowed to maintain stability."
        },
        {
          "source": "production",
          "destination": "testing",
          "description": "Direct transfer from Production to Testing is not allowed to prevent overwriting Testing data."
        },
        {
          "source": "testing",
          "destination": "development",
          "description": "Direct transfer from Testing to Development is not allowed to maintain data integrity."
        }
      ],
      "rollback_rules": {
        "partial_rollbacks": [
          {
            "source": "testing",
            "destination": "development",
            "components": [
              "All"
            ],
            "description": "Partial rollback from Testing to Development to address issues identified during Testing."
          },
          {
            "source": "production",
            "destination": "testing",
            "components": [
              "UI",
              "API"
            ],
            "description": "Partial rollback of UI and API components from Production to Testing to resolve specific issues without affecting the database."
          },
          {
            "source": "production",
            "destination": "development",
            "components": [
              "Database Schema"
            ],
            "description": "Partial rollback of the Database Schema from Production to Development for schema corrections while leaving other components unchanged."
          }
        ]
      }
    },
    "logging": {
      "development": {
        "level": "DEBUG",
        "destination": "server",
        "file_path": "development_transfer.log"
      },
      "testing": {
        "level": "INFO",
        "destination": "server",
        "file_path": "testing_transfer.log"
      },
      "production": {
        "level": "ERROR",
        "destination": "server",
        "file_path": "production_transfer.log",
        "rotation_policy": {
          "enabled": false,
          "max_size": "50MB",
          "max_age": "30d"
        }
      }
    },
    "notification": {
      "enabled": false,
      "method": {
        "on_success": "email",
        "on_failure": "sms"
      },
      "recipients": {
        "development": [
          "devteam@corporater.com"
        ],
        "testing": [
          "qatest@corporater.com"
        ],
        "production": [
          "prod@corporater.com",
          "test@corporater.com"
        ]
      },
      "on_success": false,
      "on_failure": false
    },
    "process_descriptions": [
      {
        "id": "process1",
        "name": "Development to Testing",
        "description": "Transfer from Development to Testing. Features are validated in the Testing environment. Post-transfer validation ensures quality before moving to Production.",
        "type": "forward",
        "related_processes": [
          {
            "id": "process4",
            "name": "Testing to Development",
            "description": "Partial rollback from Testing to Development to address issues identified during Testing.",
            "type": "rollback"
          }
        ]
      },
      {
        "id": "process2",
        "name": "Testing to Production",
        "description": "Transfer from Testing to Production. Features become live for end-users. Any issues detected in Production can be partially rolled back to Testing for resolution.",
        "type": "forward",
        "related_processes": [
          {
            "id": "process5",
            "name": "Production to Testing",
            "description": "Partial rollback from Production to Testing to resolve issues detected in the live environment.",
            "type": "rollback"
          }
        ]
      },
      {
        "id": "process3",
        "name": "Production to Development",
        "description": "Transfer from Production to Development for revision based on production feedback. Partial rollback of specific components to Development ensures controlled addressing of issues.",
        "type": "forward",
        "related_processes": [
          {
            "id": "process6",
            "name": "Development to Production",
            "description": "Rollback from Development to Production is not permitted to prevent data inconsistencies.",
            "type": "rollback"
          }
        ]
      }
    ],
    "release_management": {
      "release_stages": [
        {
          "stage": "development",
          "description": "Initial stage where new features and fixes are developed and unit tested."
        },
        {
          "stage": "testing",
          "description": "Testing stage for comprehensive validation including functional, integration, and system testing."
        },
        {
          "stage": "production",
          "description": "Final stage where features are live and available to end-users."
        }
      ],
      "approval_process": {
        "development_to_testing": {
          "required_approvals": [
            {
              "role": "Lead Developer",
              "name": "devteam@corporater.com"
            },
            {
              "role": "QA Manager",
              "name": "qatest@corporater.com"
            }
          ],
          "approval_conditions": {
            "tests_passed": true,
            "no_critical_bugs": true
          }
        },
        "testing_to_production": {
          "required_approvals": [
            {
              "role": "CTO",
              "name": "cto@corporater.com"
            },
            {
              "role": "Product Owner",
              "name": "productowner@corporater.com"
            }
          ],
          "approval_conditions": {
            "no_open_critical_issues": true,
            "security_checks_passed": true
          }
        }
      },
      "versioning": {
        "strategy": "Semantic Versioning",
        "format": "MAJOR.MINOR.PATCH",
        "auto_increment": true
      },
      "communication": {
        "release_notes": {
          "enabled": false,
          "distribution_method": "email",
          "recipients": [
            "stakeholders@corporater.com",
            "support@corporater.com"
          ],
          "template": "release_notes_template.md"
        },
        "emergency_release": {
          "protocol": "Hotfix",
          "approvals": [
            {
              "role": "CTO",
              "name": "cto@corporater.com"
            },
            {
              "role": "Support Lead",
              "name": "support@corporater.com"
            }
          ],
          "notification_method": "sms"
        }
      }
    },
    "collaboration_and_concurrency": {
      "object_locking": {
        "enabled": false,
        "method": "optimistic",
        "conflict_resolution": "last_writer_wins",
        "notification": {
          "enabled": false,
          "method": "email",
          "recipients": [
            "devteam@corporater.com"
          ]
        }
      },
      "dependency_management": {
        "enabled": false,
        "dependency_tracking": {
          "enabled": false,
          "method": "automatic",
          "notification": {
            "enabled": false,
            "method": "email",
            "recipients": [
              "devteam@corporater.com"
            ]
          }
        },
        "impact_analysis": {
          "enabled": false,
          "method": "automated",
          "notification": {
            "enabled": true,
            "method": "email",
            "recipients": [
              "pm@corporater.com"
            ]
          }
        }
      }
    },
    "user_feedback_integration": {
      "enabled": false,
      "feedback_form_url": "https://feedback.corporater.dev",
      "incentives_for_feedback": true
    }
  }
}