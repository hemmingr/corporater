  },
  "setup": {
    "version": "1.5.0",
    "common": {
      "base_url": "https://innovation.corporater.dev"
    },
    "hosts": [
      {
        "id": "host1",
        "uid": "f3a5b76e-1c4d-4f19-8d2b-1a3c33e73f1b",
        "name": "Development Environment",
        "url": "/development",
        "stage": "development",
        "description": "Development environment where new features are developed and initially tested."
      },
      {
        "id": "host2",
        "uid": "b2c6a7e1-6cd5-4c88-a8f1-89f7cbb8f8c5",
        "name": "Testing Environment",
        "url": "/testing",
        "stage": "testing",
        "description": "Testing environment for thorough validation before production deployment."
      },
      {
        "id": "host3",
        "uid": "e4d7c72a-9e7a-4f99-bb91-f5c8d9b8b715",
        "name": "Production Environment",
        "url": "/production",
        "stage": "production",
        "description": "Production environment where features are live and available to end-users."
      }
    ],
    "transfer_rules": {
      "allowed_transfers": [
        {
          "source": "development",
          "destination": "testing",
          "description": "Transfer from Development to Testing for further validation."
        },
        {
          "source": "testing",
          "destination": "production",
          "description": "Transfer from Testing to Production for live deployment."
        }
      ],
      "disallowed_transfers": [
        {
          "source": "development",
          "destination": "production",
          "description": "Direct transfer from Development to Production is not allowed to maintain stability."
        },
        {
          "source": "production",
          "destination": "testing",
          "description": "Direct transfer from Production to Testing is not allowed to prevent overwriting Testing data."
        },
        {
          "source": "testing",
          "destination": "development",
          "description": "Direct transfer from Testing to Development is not allowed to maintain data integrity."
        }
      ]
    },
    "backup_procedures": {
      "enabled": true,
      "pre_transfer_backup": {
        "enabled": true,
        "description": "Backup the current state of the environment before initiating a transfer to ensure data integrity and recovery if needed.",
        "frequency": "before each transfer",
        "methods": [
          {
            "method": "full_backup",
            "description": "Perform a full backup of the environment's data."
          },
          {
            "method": "incremental_backup",
            "description": "Perform incremental backups for efficiency if required."
          }
        ],
        "verification": {
          "enabled": true,
          "description": "Verify the backup to ensure it is complete and usable.",
          "methods": [
            "checksum_verification",
            "restore_test"
          ]
        }
      }
    },
    "logging": {
      "development": {
        "level": "DEBUG",
        "destination": "server",
        "file_path": "development_transfer.log"
      },
      "testing": {
        "level": "INFO",
        "destination": "server",
        "file_path": "testing_transfer.log"
      },
      "production": {
        "level": "ERROR",
        "destination": "server",
        "file_path": "production_transfer.log",
        "rotation_policy": {
          "enabled": false,
          "max_size": "50MB",
          "max_age": "30d"
        }
      }
    },
    "notification": {
      "enabled": false,
      "method": {
        "on_success": "email",
        "on_failure": "sms"
      },
      "recipients": {
        "development": [
          "devteam@corporater.com"
        ],
        "testing": [
          "qatest@corporater.com"
        ],
        "production": [
          "prod@corporater.com",
          "test@corporater.com"
        ]
      },
      "on_success": false,
      "on_failure": false
    },
    "process_descriptions": [
      {
        "id": "process1",
        "name": "Development to Testing",
        "description": "Transfer from Development to Testing. Features are validated in the Testing environment. Post-transfer validation ensures quality before moving to Production.",
        "type": "forward"
      },
      {
        "id": "process2",
        "name": "Testing to Production",
        "description": "Transfer from Testing to Production for live deployment. Features are monitored in Production to ensure they perform as expected.",
        "type": "forward"
      }
    ],
    "release_management": {
      "release_stages": [
        {
          "stage": "development",
          "description": "Initial stage where new features and fixes are developed and unit tested."
        },
        {
          "stage": "testing",
          "description": "Testing stage for comprehensive validation including functional, integration, and system testing."
        },
        {
          "stage": "production",
          "description": "Final stage where features are live and available to end-users."
        }
      ],
      "approval_process": {
        "development_to_testing": {
          "required_approvals": [
            {
              "role": "Lead Developer",
              "name": "devteam@corporater.com"
            },
            {
              "role": "QA Manager",
              "name": "qatest@corporater.com"
            }
          ],
          "approval_conditions": {
            "tests_passed": true,
            "no_critical_bugs": true
          }
        },
        "testing_to_production": {
          "required_approvals": [
            {
              "role": "CTO",
              "name": "cto@corporater.com"
            },
            {
              "role": "Product Owner",
              "name": "productowner@corporater.com"
            }
          ],
          "approval_conditions": {
            "no_open_critical_issues": true,
            "security_checks_passed": true
          }
        }
      },
      "versioning": {
        "strategy": "Semantic Versioning",
        "format": "MAJOR.MINOR.PATCH",
        "auto_increment": true
      },
      "communication": {
        "release_notes": {
          "enabled": false,
          "distribution_method": "email",
          "recipients": [
            "stakeholders@corporater.com",
            "support@corporater.com"
          ],
          "template": "release_notes_template.html"
        }
      }
    }
  }
}