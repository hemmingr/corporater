    "transfer_userpasswords": false,
    "common": {
      "domain": "innovation.corporater.dev"
    },
    "hosts": [
      {
        "id": "host1",
        "uid": "f3a5b76e-1c4d-4f19-8d2b-1a3c33e73f1b",
        "name": "newfeaturemaster",
        "stage": "development",
        "description": "Development environment where new features are developed and initially tested."
      },
      {
        "id": "host2",
        "uid": "b2c6a7e1-6cd5-4c88-a8f1-89f7cbb8f8c5",
        "name": "deployment",
        "stage": "testing",
        "description": "Testing environment for thorough validation before production deployment."
      },
      {
        "id": "host3",
        "uid": "e4d7c72a-9e7a-4f99-bb91-f5c8d9b8b715",
        "name": "basic",
        "stage": "production",
        "description": "Production environment where features are live and available to end-users."
      }
    ],
    "feature_flags": {
      "new_ui": {
        "enabled": false,
        "description": "Toggle for the new user interface."
      },
      "beta_features": {
        "enabled": true,
        "description": "Enable beta features for testing."
      }
    },
    "health_checks": {
      "development": {
        "endpoint": "/health",
        "interval": "5m"
      },
      "testing": {
        "endpoint": "/health",
        "interval": "5m"
      },
      "production": {
        "endpoint": "/health",
        "interval": "1m"
      }
    },
    "transfer_rules": {
      "allowed_transfers": [
        {
          "source": "development",
          "destination": "testing",
          "description": "Transfer from Development to Testing for further validation.",
          "options": [
            {
              "type": "Plugin",
              "enabled": true
            },
            {
              "type": "Users",
              "enabled": true
            },
            {
              "type": "Enterprise Templates",
              "enabled": true
            },
            {
              "type": "Enterprise Tasks",
              "enabled": true
            },
            {
              "type": "Properties",
              "enabled": true
            }
          ]
        },
        {
          "source": "testing",
          "destination": "production",
          "description": "Transfer from Testing to Production for live deployment.",
          "options": [
            {
              "type": "Plugin",
              "enabled": true
            },
            {
              "type": "Users",
              "enabled": true
            },
            {
              "type": "Enterprise Templates",
              "enabled": false
            },
            {
              "type": "Enterprise Tasks",
              "enabled": true
            },
            {
              "type": "Properties",
              "enabled": true
            }
          ]
        }
      ],
      "disallowed_transfers": [
        {
          "source": "development",
          "destination": "production",
          "description": "Direct transfer from Development to Production is not allowed to maintain stability."
        },
        {
          "source": "production",
          "destination": "testing",
          "description": "Direct transfer from Production to Testing is not allowed to prevent overwriting Testing data."
        },
        {
          "source": "testing",
          "destination": "development",
          "description": "Direct transfer from Testing to Development is not allowed to maintain data integrity."
        }
      ]
    },
    "logging": {
      "development": {
        "level": "DEBUG",
        "destination": "server",
        "file_path": "development_transfer.log"
      },
      "testing": {
        "level": "INFO",
        "destination": "server",
        "file_path": "testing_transfer.log"
      },
      "production": {
        "level": "ERROR",
        "destination": "server",
        "file_path": "production_transfer.log",
        "rotation_policy": {
          "enabled": true,
          "max_size": "50MB",
          "max_age": "30d"
        }
      }
    },
    "notification": {
      "enabled": true,
      "method": {
        "on_success": "email",
        "on_failure": "sms"
      },
      "recipients": {
        "development": [
          "devteam@corporater.com"
        ],
        "testing": [
          "qatest@corporater.com"
        ],
        "production": [
          "prod@corporater.com",
          "test@corporater.com"
        ]
      },
      "on_success": true,
      "on_failure": true
    },
    "process_descriptions": [
      {
        "id": "process1",
        "name": "Development to Testing",
        "description": "Transfer from Development to Testing. Features are validated in the Testing environment. Post-transfer validation ensures quality before moving to Production.",
        "type": "forward"
      },
      {
        "id": "process2",
        "name": "Testing to Production",
        "description": "Transfer from Testing to Production. Features become live for end-users. Issues detected in Production can be handled as required.",
        "type": "forward"
      }
    ],
